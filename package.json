    "keywords": [
        "access",
        "cloudflare",
        "firewall",
        "ip"
    ],
    "author": "Igor Ramadas <igor@devv.com>",
    "homepage": "https://github.com/igoramadas/cloudflare-allowme",
    "license": "MIT",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/igoramadas/cloudflare-allowme.git"
    },
    "engines": {
        "node": ">= 20.0"
    },
    "scripts": {
